<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>

                <TextView
                    android:text="Titre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:id="@+id/servicedetail_titlelabel"
                    android:textStyle="normal|bold" />
            </TableRow>
        </TableLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/servicedetail_title" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>

                <TextView
                    android:text="Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/servicedetail_descriptionlabel"
                    android:textStyle="normal|bold" />
            </TableRow>
        </TableLayout>

        <EditText
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="2"
            android:gravity="top|left"
            android:maxLines="5"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:scrollbars="vertical"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/servicedetail_description" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>

                <TextView
                    android:text="Prix ($/heure) "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/servicedetail_prix_label"
                    android:textStyle="normal|bold" />
            </TableRow>
        </TableLayout>

        <EditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:minWidth="2dp"
            android:inputType="number"
            android:ems="10"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/servicedetail_price" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:layout_weight="0.64">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Disponibilité de"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/servicedetail_labelfrom"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:text="Date:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/servicedetail_labelfromdate" />

                <TextView
                    android:text="Heure:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/servicedetail_labelfromheure" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:focusable="false"
                    android:id="@+id/servicedetail_datefrom" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:ems="10"
                    android:focusable="false"
                    android:id="@+id/servicedetail_timefrom" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Jusqu'à"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/creationserivice_labelto"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:text="Date:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/servicedetail_labeltodate" />

                <TextView
                    android:text="Heure:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/servicedetail_labeltoheure" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/servicedetail_dateto" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:ems="10"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/servicedetail_timeto" />


            </TableRow>


        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/cancelbutton_servicedetail"
                    android:text="Annuler"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:elevation="1dp" />

                <Button
                    android:id="@+id/hirebutton_servicedetail"
                    android:text="Embaucher"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>